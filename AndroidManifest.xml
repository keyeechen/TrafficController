<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.heimi.traffic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.heimi.traffic.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.heimi.traffic.ui.AppTrafficListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.heimi.traffic.ui.TrafficSettingsActivity"
            android:label="@string/app_name" >
        </activity>

        <receiver android:name="com.heimi.traffic.receiver.AppInUninstallReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.heimi.traffic.receiver.SmsTrafficQueryReceiver" >
            <action android:name="android.provider.sms.SENDCONTEX_SMSQUERYTRAFFIC" >
            </action>
        </receiver>
    </application>

</manifest>